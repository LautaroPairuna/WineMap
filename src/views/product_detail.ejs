<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head.ejs'); %>
</head>
<header>
    <%- include('./partials/header.ejs'); %>
</header>
<body>
    <section class="bg-categorias">
        <div class="flex-container mb-3" id="contenedor_producto">
            <div class="flex-container-products-detail-img w-40">
                <img src="/images/<%- product_query.foto %>" alt="" class="img-home img-detail-product-width" id="itemFoto">
            </div>
            <div class="flex-container-products-detail text-white w-60">
                <h3 class="product-detail-title" id="itemProducto"><%- product_query.producto %></h3>
                <p class="product-detail-text">Precio: <span id="itemPrecio"><%- product_query.precio %></span></p>
                <!-- <p class="product-detail-text">Stock: 27</p> -->
                <div class="flex-container-products-detail-btn">
                    <button class="btn-carrito mx-3"><img src="/images/iconos/ico-minun.svg" alt="" class="w-36"></button>
                    <p class="mx-3"><span id="itemCantidad">1</span></p>
                    <button class="btn-carrito mx-3"><img src="/images/iconos/ico-plus.svg" alt="" class="w-36"></button>
                    <button class="btn-carrito mx-3" id="btn-compra"><img src="/images/iconos/ico-cart-shop-products-detail.svg" alt="" class="w-36"></button>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-productos">
        <div class="flex-container mb-3">
            <h2 class="categorias-title shadow-1">PRODUCTOS QUE PODRIAN INTERESARTE</h2>
        </div>
        <div class="carousel mx-5-carrousel">
            <div class="carousel_content">
                <button aria-label="anterior" class="carousel_prev">
                    <img src="/images/iconos/ico-previous.svg" alt="Anterior">
                </button>
                <div class="carousel_list">
                <% productsList.forEach(product => { %>
                    <div class="carousel_element mx-3 items" id="contenedor_producto">
                        <div class="bg-white flex-container-products">
                            <img src="/images/<%- product.foto %>" alt="" id="itemFoto">
                            <h4 id="itemProducto"><%-product.producto %></h4>
                            <p id="itemPrecio">Precio: <span id="itemPrecio"><%- product_query.precio %></span></p>
                            <div class="flex-container-products-btn">
                                <a href="#" class="btn-body mx-3 w-30" id="btn-compra"><img src="/images/iconos/ico-cart-shop-products.svg" alt="" class="w-24"></a>
                                <a href="/products/<%- product.id %>" class="btn-body mx-3 w-70">Ver MÃ¡s</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
                </div>
                <button aria-label="siguiente" class="carousel_next">
                    <img src="/images/iconos/ico-next.svg" alt="Siguiente">
                </button>
            </div>
            <div role="tablist" class="mt-3 carousel_indicators"></div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/glider-js@1.7.7/glider.min.js"></script>
    <script src="/lib/Glider.js-master/glider.min.js"></script>
    <script src="/lib/Glider.js-master/carousel_glider.js"></script>
    <script src="/js/toggle-menu.js"></script>
    <script type="module" src="/js/addCart.js"></script>
</body>
<footer>
    <%- include('./partials/footer'); %>
</footer>
</html>