<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head.ejs'); %>
</head>
<header>
    <%- include('./partials/header.ejs'); %>
</header>
<body>
    <section class="bg-categorias">
        <div class="flex-container-products">
            <div class="flex-container mb-3">
                <% product_query.forEach(product => { %>
                <div class="flex-container-products-detail-img w-40">
                    <img src="public/images/<%- product.foto %>" alt="" class="img-home img-detail-product-width">
                </div>
                <div class="flex-container-products-detail text-white w-60">
                    <h3 class="product-detail-title"><%- product.producto %></h3>
                    <p class="product-detail-text">Precio: <%- product.precio %></p>
                    <!-- <p class="product-detail-text">Stock: 27</p> -->
                    <div class="flex-container-products-detail-btn">
                        <a href="" class="btn-body mx-3">-</a>
                        <p class="mx-3">1</p>
                        <a href="" class="btn-body mx-3">+</a>
                        <a href="" class="btn-body mx-3"><img src="public/images/iconos/ico-cart-shop-products.svg" alt="" class="w-24"></a>
                    </div>
                </div>
                <% }) %>
            </div>
            <div class="flex-container mb-3">
                <h2 class="categorias-title shadow-1">PRODUCTOS QUE PODRIA INTERESARTE</h2>
            </div>
            <div class="carousel mx-5-carrousel">
                <div class="carousel_content">
                    <button aria-label="anterior" class="carousel_prev">
                        <img src="public/images/iconos/ico-previous.svg" alt="Anterior">
                    </button>
                    <div class="carousel_list">
                        <% products.forEach(product => { %>
                        <div class="carousel_element mx-3">
                            <div class="bg-white flex-container-products">
                                <img src="../public/images/<%- product.foto %>" alt="">
                                <h3><%-product.producto %></h3>
                                <p>Precio: <%- product.precio %></p>
                                <div class="flex-container-products-btn">
                                    <a href="" class="btn-body mx-3 w-30"><img src="../public/images/iconos/ico-cart-shop-products.svg" alt="" class="w-24"></a>
                                    <a href="/products/<%- product.id %>" class="btn-body mx-3 w-70">Ver MÃ¡s</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    <button aria-label="siguiente" class="carousel_next">
                        <img src="public/images/iconos/ico-next.svg" alt="Siguiente">
                    </button>
                </div>
                <div role="tablist" class="mt-3 carousel_indicators"></div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/glider-js@1.7.7/glider.min.js"></script>
    <script src="public/lib/Glider.js-master/glider.min.js"></script>
    <script src="public/lib/Glider.js-master/carousel_glider.js"></script>
    <script src="public/js/toggle-menu.js"></script>
</body>
<footer>
    <%- include('./partials/footer'); %>
</footer>
</html>